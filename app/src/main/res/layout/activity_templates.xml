<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemplatesActivity"
    android:orientation="vertical"
    android:background="#F5F5F5"
    >

    <TextView
        android:id="@+id/templatetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Templates"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginVertical="10dp"
        />


    <GridView
        android:id="@+id/templateGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/templatetxt"
        android:contextClickable="true"
        android:longClickable="true"
        android:numColumns="2"
        android:padding="10dp">

    </GridView>

    <Button
        android:id="@+id/templatebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/templateGrid"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:enabled="false"
        android:text="Use Template"
        android:textStyle="bold" />

</LinearLayout>