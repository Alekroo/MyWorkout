<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set nr"
            android:id="@+id/titleText"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingVertical="30px"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/titleText"
            android:id="@+id/workoutLL"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set nr"
                android:layout_marginHorizontal="40px"
                android:textAlignment="center"
                android:layout_weight="1"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kg"

                android:textAlignment="center"
                android:layout_marginHorizontal="40px"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rep"
                android:textAlignment="center"
                android:layout_marginHorizontal="40px"
                android:layout_weight="1"

                />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Finished"
                android:layout_marginHorizontal="50px"
                android:textAlignment="center"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workoutLL"
            android:id="@+id/workoutRV"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/workoutRV"
            android:layout_below="@+id/workoutRV"
            android:text="New set"
            android:id="@+id/addsetBtn"
            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>