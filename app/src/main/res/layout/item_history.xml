<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:id="@+id/h_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:minHeight="230dp"
        android:paddingVertical="20dp"
        app:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday Plan"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTitle"
            android:text="Thursday 27. April"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDate"
            android:text="Lasted: 52 min"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:paddingBottom="30px"/>

        <TextView
            android:id="@+id/textExercises"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTime"
            android:text="Exercises:"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textPerformance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTime"
            android:text="Performance:"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/secRecView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textExercises">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
