<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:paddingVertical="20dp">

    <RelativeLayout
        android:id="@+id/exercise_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        >

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/exercise_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Line 2"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/exercise_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exercise_title"
            android:layout_marginTop="-1dp"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="Set nr" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="KG"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="Reps"
                android:textAlignment="center"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/exercise_row2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/exercise_row"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="Set 1" />

            <EditText
                android:id="@+id/digitField11"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/digitField12"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:inputType="number" />

            <Button
                android:id="@+id/add_btn11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Finished" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/exercise_row3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/exercise_row2"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="Set 2" />

            <EditText
                android:id="@+id/digitField21"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:inputType="number"
                android:layout_width="40dp"/>

            <EditText
                android:id="@+id/digitField22"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:inputType="number"
                android:layout_width="40dp"/>
            <Button
                android:id="@+id/add_btn21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Finished"
                 />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/exercise_row4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/exercise_row3"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="Set 3" />

            <EditText
                android:id="@+id/digitField31"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:inputType="number"
                android:layout_width="40dp"/>

            <EditText
                android:id="@+id/digitField32"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:inputType="number"
                android:layout_width="40dp"/>
            <Button
                android:id="@+id/add_btn31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finished"
                android:layout_marginLeft="30dp"

                />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>